{
    "name": "cooma",
    "displayName": "cooma",
    "description": "Cooma Language Support",
    "version": "1.0.0",
    "publisher": "inkytonik",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:cooma"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "cooma",
                "aliases": [
                    "Cooma",
                    "cooma"
                ],
                "extensions": [
                    ".cooma"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "cooma",
                "scopeName": "source.cooma",
                "path": "./syntaxes/cooma.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "vscode-languageclient": "^5.2.1"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.26",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
